              ],
              "summary": "Show a User",
              "description": "Show a user",
              "parameters": [
                {
                    "in": "path",
                    "name": "user_id",
                    "required": true,
                    "description": "User id"
                }
              ],
              "responses": {
                  "200": {
                      "description": "Success"
